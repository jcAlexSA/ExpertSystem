<Window
    x:Class="ExpertSystem.View.TermsEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ExpertSystem.ViewModel"
    Name="TermsEditorWindow"
    Title="TermsEditorView"
    Width="300"
    Height="300"
    ResizeMode="NoResize">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Vertical">

        <GroupBox Header="Terms Definition">
            <TextBlock
                Margin="5"
                Text="Here you can define all parameters of terms this valiable"
                TextAlignment="Justify"
                TextWrapping="Wrap" />
        </GroupBox>


        <StackPanel Margin="5" Orientation="Horizontal">

            <TextBlock
                Margin="2"
                Padding="3"
                HorizontalAlignment="Right"
                Background="#E0EEEE"
                Text="Count Variable: " />
            <TextBlock
                Name="textBoxNumber"
                Width="66"
                Margin="3"
                Padding="3"
                HorizontalAlignment="Right"
                Background="#E0EEEE"
                Text="{Binding FuzzyVariable.CountTerms}" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" />


    </StackPanel>
</Window>
